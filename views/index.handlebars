<img src="/assets/img/burger.gif" data-still="/assets/img/burger-still.gif" data-animate="/assets/img/burger.gif"
	data-state="animate" alt="burger gif" width="200px" class="gif">
<h1>Eat the Burger</h1>

<div class="burgers">
	<div class="devour-me-answers">
		<h3>Up for grabs:</h3>
		{{#each burger}}
			{{#unless devoured}}
				<h4>{{this.id}}. {{this.burger_name}}</h4>
				<button class="devour-me" data-id="{{this.id}}" data-devoured="{{this.devoured}}">Devour me!</button>
			{{/unless}}
		{{/each}}
	</div>
	<div class="delete-me-answers">
		<h3>Finshed Burgers:</h3>
		{{#each burger}}
			{{#if devoured}}
				<h4>{{this.id}}. {{this.burger_name}}</h4>
				<button class="delete-me" data-id="{{this.id}}" data-devoured="{{this.devoured}}">Delete me!!</button>
			{{/if}}
		{{/each}}
	</div>
</div>
